<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!---->
    <record id="helpdesk_ticket_tag_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <button string="Create Ticket" 
                            name="%(helpdesk_edlopen.create_ticket_action)d"
                            type="action"/>
                        <field name="ticket_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_tag_view_form_no_priority" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <field name="ticket_ids" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_tag_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <tree string="Tag">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Tickets Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket tag
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_create_tag_action" model="ir.actions.act_window">
        <field name="name">Create Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name = "view_ids" eval = "[(5,0,0), (0,0,{'view_mode':'form', 'view_id': ref('helpdesk_ticket_tag_view_form')})]"/>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name = "target">new</field>
    </record>

    <menuitem
        id="helpdesk_ticket_tag_menu"
        name="Tag"
        action="helpdesk_ticket_action"
        parent="helpdesk_edlopen.helpdesk_menu_submenu"
        sequence="10"/>

</odoo>
